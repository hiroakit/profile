#!/usr/local/bin/zsh

#
# Command Alias
#

alias -g G='| grep'
alias -g H='| head'
alias -g T='| tail'

alias ls="ls -G -w -a -l"
alias du="du -h"
alias df="df -h"
alias mv='nocorrect mv'
alias cp='nocorrect cp'
alias mkdir='nocorrect mkdir'
alias h='history'
alias ha='history-all'
alias su="su -l"

case "${OSTYPE}" in
    darwin*)
	alias emacs="/usr/local/bin/emacs -nw"
	;;
    linux*)
	alias emacs="/usr/bin/emacs"
	;;
    freebsd*)
	;;
    cygwin*)
	alias emacs="/usr/bin/emacs"
	;;    
esac
